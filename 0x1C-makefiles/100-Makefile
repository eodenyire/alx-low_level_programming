CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c m.h
	@if [ -f m.h ]; then $(CC) -c main.c; else echo "Header file m.h is missing."; exit 1; fi

school.o: school.c m.h
	@if [ -f m.h ]; then $(CC) -c school.c; else echo "Header file m.h is missing."; exit 1; fi

clean:
	@$(RM) *~

oclean:
	@$(RM) $(OBJ)

fclean: clean
	@$(RM) $(NAME)

re: fclean all
